{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "server/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "public"
  ]
}
